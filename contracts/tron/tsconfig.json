{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "moduleDetection": "auto",
    "outDir": "./dist",
    "rootDir": ".",
    "lib": [
      "ESNext"
    ],
    "target": "ES2022",
    "removeComments": false,
    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false
  },
  "include": [
    "./tests/**/*",
    "./src/**/*"
  ],
  "exclude": [
    "./dist",
    "./node_modules"
  ]
}