    "contracts:build": "pnpm --filter=./contracts/* build",
    "contracts:test": "pnpm --filter=./contracts/* test",
    "workspace:install": "pnpm install",
    "workspace:clean": "pnpm -r exec rm -rf node_modules && rm -rf node_modules",
