{
    "name": "tron-foundry-project",
    "version": "0.0.1",
    "description": "A Foundry project for Tron smart contracts development",
    "scripts": {
        "build": "forge build",
        "test": "forge test",
        "test:verbose": "forge test -vvv",
        "test:gas": "forge test --gas-report",
        "clean": "forge clean",
        "fmt": "forge fmt",
        "snapshot": "forge snapshot",
        "coverage": "forge coverage",
        "deploy:nile": "forge script script/Deploy.s.sol --rpc-url tron_nile --broadcast",
        "deploy:mainnet": "forge script script/Deploy.s.sol --rpc-url tron_mainnet --broadcast",
        "install": "forge install",
        "update": "forge update"
    },
    "dependencies": {
        "tronweb": "^6.0.4"
    },
    "devDependencies": {
        "@types/node": "^22.15.32",
        "typescript": "^5.8.3"
    },
    "keywords": [
        "tron",
        "foundry",
        "smart-contracts",
        "solidity"
    ],
    "license": "MIT"
}