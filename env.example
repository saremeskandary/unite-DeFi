# 1inch Fusion+ Bitcoin Integration Environment Variables
# Copy this file to .env.local and fill in your actual values

# Ethereum Configuration
# Your Ethereum private key (without 0x prefix)
NEXT_PUBLIC_ETH_PRIVATE_KEY=your_ethereum_private_key_here

# Ethereum RPC URL (Alchemy, Infura, etc.)
NEXT_PUBLIC_ETH_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your-alchemy-key

# Bitcoin Configuration
# Your Bitcoin private key in WIF format (for testnet or mainnet)
NEXT_PUBLIC_BTC_PRIVATE_KEY_WIF=your_bitcoin_private_key_in_wif_format

# 1inch API Configuration
# Get your API key from https://portal.1inch.dev/
NEXT_PUBLIC_INCH_API_KEY=your_1inch_api_key_here

# Network Configuration
NEXT_PUBLIC_NETWORK=mainnet
NEXT_PUBLIC_USE_TESTNET=false

# Optional: Debug mode
DEBUG=false

# Wallet Addresses (for faucets and testing)
NEXT_PUBLIC_ETH_ADDRESS=your_ethereum_address_here
NEXT_PUBLIC_BTC_ADDRESS=your_bitcoin_address_here

# Bitcoin Node Configuration (for local development)
BITCOIN_NETWORK=mainnet
BITCOIN_RPC_URL=http://localhost:8332
BITCOIN_RPC_USER=your_bitcoin_rpc_user
BITCOIN_RPC_PASS=your_bitcoin_rpc_password

# Bitcoin Faucet Configuration (for testnet)
BITCOIN_FAUCET_URL=http://localhost:3001

# Ethereum Network Configuration
ETHEREUM_NETWORK=mainnet
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your-alchemy-key
ETHEREUM_PRIVATE_KEY=your_ethereum_private_key_here

# 1inch API Configuration (server-side)
INCH_API_KEY=your_1inch_api_key_here
INCH_API_URL=https://api.1inch.dev

# Test Configuration
NODE_ENV=production
JEST_TIMEOUT=30000

# Mock Configuration
MOCK_BITCOIN_NODE=false
MOCK_ETHEREUM_NODE=false

# Test Data (for development/testing)
TEST_SECRET=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef
TEST_SECRET_HASH=abcd1234abcd1234abcd1234abcd1234abcd1234abcd1234abcd1234abcd1234
TEST_BITCOIN_ADDRESS=your_test_bitcoin_address_here
TEST_ETHEREUM_ADDRESS=your_test_ethereum_address_here

# TON Configuration
NEXT_PUBLIC_TON_NETWORK=mainnet
NEXT_PUBLIC_TON_RPC_URL=https://toncenter.com/api/v2/jsonRPC
NEXT_PUBLIC_TON_API_KEY=your_ton_api_key_here
TON_PRIVATE_KEY=your_ton_private_key_here
TON_MNEMONIC=your_ton_mnemonic_phrase_here
NEXT_PUBLIC_TON_ADDRESS=your_ton_address_here

# TON Network Configuration
TON_NETWORK=mainnet
TON_RPC_URL=https://toncenter.com/api/v2/jsonRPC
TON_API_KEY=your_ton_api_key_here

# Coverage Configuration
COVERAGE_THRESHOLD=80
COVERAGE_REPORTS=text,lcov,html
